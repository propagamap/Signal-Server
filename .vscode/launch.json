{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/signalserver",
            // -dbg Verbose debug messages
            // -nothreads Turn off threaded processing
            // -lat Tx Latitude (decimal degrees) -70/+70
            // -lon Tx Longitude (decimal degrees) -180/+180
            // -f Tx Frequency (MHz) 20MHz to 100GHz (LOS after 20GHz)
            // -txh Tx Height (above ground)
            // -m Metric units of measurement
            // -pm Propagation model. 3: Hata
            // -pe Propagation model mode: 3=Rural
            "args": ["-dbg", "-nothreads", "-lat", "40.50101", "-lon", "-3.38036", "-f", "450", "-txh", "20", "-m", "-pm", "3", "-pe", "3", "-o-plo"],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb"
        },
    ]
}